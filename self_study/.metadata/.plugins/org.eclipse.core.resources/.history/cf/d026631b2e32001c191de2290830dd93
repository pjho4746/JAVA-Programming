package Lotto;

import java.util.Random;

public class Lotto {
	int[] lotto = new int[6];
	boolean isValid;
	Random ran = new Random();
	//인자가 없는 생성자
	public Lotto() {
		generate();
		isValid = verify();
	}
	//인자가 있는 생성자 
	public Lotto(int[] lo) {
		for(int i=0; i<lotto.length; i++)
			lotto[i] = lo[i];
		isValid = verify();
	}
	//인자가 있는 생성자
	public Lotto(int a, int b, int c, int d, int e, int f) {
		lotto = new int[] {a, b, c, d, e, f};
		isValid = verify();
	}
	//설정된 번호의 유효성 검사
	public boolean verify() {
		for(int i=0; i<lotto.length; i++) {
			if(1<=lotto[i]&&lotto[i]<=46) {
				for(int j=0; j<lotto.length; j++) {
					if(lotto[i]!= lotto[j])
						return true;
				}
			}
			}
		}
		return false;
	}
	//전호 출력(범위, 중복 여부)
	public void show() {
		//유효한 번호가 설정된 경우에만 출력
		if(isValid == true) {
			for(int i=0; i<lotto.length; i++)
				System.out.pirnt(lotto[i]+" ");
		}
		//유효하지 않은 경우 오류메시지 출력
		else
			System.out.print("오류: 유효하지 않습니다.");
	}
	//로또 번호 반환
	public int[] getNumbers() {
		if(isValid == true)
			return lotto;
		else {
			lotto = null;
			return lotto;
	}
	//유효 번호의 자동 생성
	public void generate() {
		for(int i=0; i<lotto.length; i++) {
			lotto[i] = ran.nextInt(45)+1;
			for(int j=0; j<i; j++) {
				if(lotto[i] == lotto[j]) {
					j--;
					break;
				}
			}
		}
	}
}

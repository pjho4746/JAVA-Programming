//컴퓨터공학과 20200769 박지호
package hw.plygon;

public class Rectangle extends Polygon {
	protected int x2, y2;
	
	//폭과 높이, 위치를 전달받음
	public Rectangle(int x, int y, int w, int h, String Type, int x2, int y2) {
		super(x, y, w, h, Type);
		this.x2 = x2;
		this.y2 = y2;
	}
	
	public boolean isSquare(int x, int y, int x2, int y2)
	{
		//leftTop(x, y) / rightBottom(x2, y2)라고 가정
		if(x>x2) {
			int temp;
			temp = x; x = x2; x2 = temp;
			return false;
		}
		else if (y>y2){
			int temp;
			temp = y; y = y2; y2 = temp;
			return false;
		}
		else
			return true;
	}
	
	public double getArea()
	{	
		int dx = x2 - x;
		int dy = y2 - y;
		
		return dx*dy;

	}
	
	public void show() {
		super.show();
		System.out.println("또다른 위치: " + x2 + y2);
	}
}

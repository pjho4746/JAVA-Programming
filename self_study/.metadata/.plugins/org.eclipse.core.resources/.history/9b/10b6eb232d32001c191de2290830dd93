package Lotto;

public class Lotto {
	int[] lotto = new int[6];
	boolean isValid;
	//인자가 없는 생성자
	public Lotto() {
		generate();
		isValid = verify();
	}
	//인자가 있는 생성자 
	public Lotto(int[] lo) {
		for(int i=0; i<lotto.length; i++)
			lotto[i] = lo[i];
		isValid = verify();
	}
	//인자가 있는 생성자
	public Lotto(int a, int b, int c, int d, int e, int f) {
		lotto[0] = a;
		lotto[1] = b;
		lotto[2] = c;
		lotto[3] = d;
		lotto[4] = e;
		lotto[5] = f;
		isValid = verify();
	}
	//설정된 번호의 유효성 검사
	public boolean verify() {
		for(int i=0; i<lotto.length; i++) {
			for(int j =i+1; j<lotto.length; j++) {
				if(lotto[i] == lotto[j])
					return false;
			}
		}
		return true;
	}
	//전호 출력(범위, 중복 여부)
	public void show() {
		//유효한 번호가 설정된 경우에만 출력
		
		//유효하지 않은 경우 오류메시지 출력
	}
	//로또 번호 반환
	public int[] getNumbers() {
		
	}
	//유효 번호의 자동 생성
	public void generate() {
		
	}
}

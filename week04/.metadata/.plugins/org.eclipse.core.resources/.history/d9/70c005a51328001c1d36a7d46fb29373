package exam.bead;

public class Child {
	private int numOfBead;
	
	public Child(int numOfBead){
		this.numOfBead = numOfBead;
	}
	
	public void show() {
		System.out.println("보유 개수: "+numOfBead);
	}
	
	public int obtainBead(int n) {
		
	}
	
	public int loseBead(int nLoseBead) {
		if (numOfBead < nLoseBead) {
			int rval = numOfBead;
			numOfBead = 0;
			return rval;
		}
		
		numOfBead -= nLoseBead;
		return nLoseBead;
	}
}
